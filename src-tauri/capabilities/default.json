{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$HOME/**" }
      ]
    },
    "dialog:default",
    "shell:allow-execute",
    "shell:allow-kill",
    "core:event:allow-listen",
    "core:event:allow-emit"
  ]
}
